<section id="{{ id }}" class="information">
    <div class="container">
        <div class="row align-items-center justify-content-center ">
            <div class="col-12 col-lg-4 col-md-3 text-content">
                <h2 class="text-uppercase">{{ information.title }}</h2>
                <p class="title mb-3 mt-2">{{ information.text }}</p>
            </div>
            <div class="px-0 px-lg-2 col-12 col-lg-6 col-md-6 d-flex justify-content-center img-wrp">
                    <img src="{{ Image(information.image).src }}" alt="{{ information.title }}"
                         class="img-fluid img-second pb-3"/>
            </div>
        </div>
    </div>
</section>