{# ⚠️ This is only an example, put your HTML/TWIG in there #}
<nav class="navbar px-3 justify-content-center">
    <div class="navbar-brand">
        <a href="{{ site.link }}" target="_self" class="logo">
            {% if 'svg' in holder.logo.subtype %}
                {{ Image(holder.logo).src|get_svg_from_file }}
            {% else %}
                <img id="header-logo"
                     src="{{ Image(holder.logo ? holder.logo : site.theme.link ~ '/dist/img/vectors/logo-b-ahead.svg').src }}"
                     alt="{{ Image(holder.logo ? holder.logo : site.theme.link ~ '/dist/img/vectors/logo-b-ahead.svg').alt }}"
                     class="img-fluid"/>
            {% endif %}
        </a>
    </div>

    {# If you need some quick menu on the header #}
    {% include "partials/menu.twig" with {
        'menu': main_menu.get_items,
        'classes': 'd-none d-lg-flex',
    } %}

    <div id="actions" class="nav actions d-none d-lg-flex">
        <button id="menu-toggler">
            <div class="menu-toggler-bar"></div>
            <div class="menu-toggler-bar"></div>
        </button>
    </div>

    {# MAIN Menu #}
    <div id="main-menu" class="px-5 pb-5 px-md-6 pb-md-5 menu">
        <div class="container text-center">
            <div class="row h-100 d-flex justify-content-center align-content-center">
                <div class="row">
                    <div class="col-12 col-lg-auto d-flex flex-column subitems">
                        {% include "partials/menu.twig" with {
                            'menu': main_menu.get_items,
                            'classes': 'flex-column '
                        } %}
                    </div>
                </div>
                <div class="row">
                    <div class="col-12">
                        <a target="_blank" href="{{ options.social.instagram }}">
                            <i class="bi bi-instagram"></i>
                        </a>
                        <a target="_blank" href="{{ options.social.facebook }}">
                            <i class="bi bi-facebook"></i>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</nav>
